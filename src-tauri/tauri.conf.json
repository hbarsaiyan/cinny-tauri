{
  "package": {
    "productName": "Cinny",
    "version": "1.1.2"
  },
  "build": {
    "distDir": "../dist",
    "devPath": "../dist",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "tauri": {
	"systemTray": {
      "iconPath": "icons/tray.png"
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "cinny.tauri",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": [],
      "copyright": "",
      "category": "Social Networking",
      "shortDescription": "Yet another matrix client",
      "longDescription": "Cinny is built on top of Matrix â€” An open network for secure, decentralized communication.",
      "deb": {
        "depends": []
      },
      "macOS": {
        "frameworks": [],
        "minimumSystemVersion": "",
        "exceptionDomain": "",
        "signingIdentity": null,
        "entitlements": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "updater": {
      "active": false
    },
    "allowlist": {
      "all": false
    },
    "windows": [
      {
        "title": "Cinny",
        "width": 900,
        "height": 680,
        "minWidth": 400,
        "minHeight": 550,
        "resizable": true,
		    "url": "index.html",
		    "center": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src blob: data: filesystem: ws: wss: http: https: tauri: 'unsafe-eval' 'unsafe-inline' 'self' img-src: 'self'"
    }
  }
}
